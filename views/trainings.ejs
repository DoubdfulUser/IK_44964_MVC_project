<!DOCTYPE html>
<html>
<head>
    <title>Trainings</title>
</head>
<body>
    <%- include('partials/header') %>
    <h1 class="page-title">Discover Your Perfect Workout</h1>
    
    <form action="/" method="GET" class="search-form">
        <input type="text" name="search" placeholder="Search for trainings" class="search-input">
        <button type="submit" class="search-button">Search</button>
    </form>
    
    <div class="container">
        <div class="trainings-list">
            <% trainings.forEach(function(training, index) { %>
                <a href="/trainings/<%= training._id %>" class="training-link">
                    <div class="training-card"> 
                        <img src="/<%= training.image %>" alt="<%= training.name %> Image" class="training-image">
                        <div class="training-info">
                            <h2><%= training.name %></h2>
                            <p><span>City:</span> <%= training.city %></p>
                            <p><span>Location:</span> <%= training.location %></p>

                            <p><span>Date:</span> <%= training.date.toDateString() %></p>
                        </div>
                    </div>
                </a>
                <% if ((index + 1) % 4 === 0) { %>
                    <div style="flex-basis: 100%; height: 0;"></div>
                <% } %>
            <% }); %>
        </div>
    </div>
</body>

</html>
